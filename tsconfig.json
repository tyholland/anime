{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "Components/*": ["src/components/*"],
      "Assets/*": ["public/assets/*"],
      "PageComponents/*": ["src/page-components/*"],
      "Styles/*": ["src/styles/*"],
      "Utils/*": ["src/utils/*"],
      "Hooks/*": ["src/hooks/*"],
      "Requests/*": ["src/requests/*"],
      "Modals/*": ["src/modals/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}
